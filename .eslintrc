{
  "root": true,
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": ["./tsconfig.json"]
  },
  "extends": [
    "eslint:recommended",
    "standard",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "plugins": ["import", "@typescript-eslint"],
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true
    }
  },
  "rules": {
    "max-len": ["warn", { "code": 120 }],
    "no-alert": "off",
    "no-console": "off",
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", "never"],
    "operator-linebreak": ["error", "after"],
    "import/order": ["error", { "newlines-between": "never", "groups": [
      "external",
      "builtin",
      "internal",
      "parent",
      "index",
      "sibling",
      "object",
      "type"
    ]}]
  },
  "env": {
    "es6": true,
    "node": true
  }
}
